<% include ./partials/header %>
<div class="container-fluid">
    <header class="form-header"><strong>Edit</strong></header>
    <form action="/projects/<%=project._id%>?_method=PUT" method="POST" class="form-sub">
        <div class="form-group">
            <label for="title">
                Title
            </label>    
            <input type="text" name="project[title]"  class="form-control" value="<%=project.title%>">
        </div>
        <div class="form-group">
            <label for="details">
                Details
            </label>    
            <textarea type="text" name="project[details]"  class="form-control" ><%=project.details%></textarea>
             
        </div>
       <div class="form-check">
           <input  type="radio" name="project[difficulty]" value="1" class="form-check-input">
           <label class="form-check-label" for="easy">Easy</label>
       </div>
       <div class="form-check">
           <input  type="radio" name="project[difficulty]" value="3" class="form-check-input">
           <label class="form-check-label" for="medium">Medium</label>
       </div>
       <div class="form-check">
           <input  type="radio" name="project[difficulty]" value="5" class="form-check-input">
           <label class="form-check-label" for="hard">Hard</label>
       </div>
        <button class="btn btn-dark">Submit</button>
    </form>
</div>


<% include ./partials/footer %> 