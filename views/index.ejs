<% include ./partials/header %>

<div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome</h1>
      <p class="lead">Scribble is a place for sharing all your great ideas, be it an art project or an idea for a computer application </p>
      <hr class="my-4">
      <a class="btn btn-primary btn-lg" href="/projects/new" role="button">Have an idea?</a>
    </div>
    <div class="sort">
      <a class="btn btn-warning" href="/projects/sort/recent">New</a>
      <a class="btn btn-danger" href="/projects/sort/pop">Popular</a>
    </div>
        <%projects.forEach(function(project){%>
            <div class="card ideas">
              <h5 class="card-header">
                <div class="votes">
                  <form class="vote-up" data-id="<%=project._id%>">
                  <button class="btn"><i class="far fa-arrow-alt-circle-up upvote"></i></button>
                  </form>
                  <div id="<%=project._id%>" class="vote"><%=project.votes %></div>
                  <form class="vote-down" data-id="<%=project._id%>">
                    <button class="btn"><i class="far fa-arrow-alt-circle-down downvote"></i></button>
                  </form>
                </div>
                <div class="title"><%=project.title%></div>
              </h5>
              <div class="card-body">
                <p class="card-text"><%=project.details.substring(0,500)%></p>
                <div class = "stars">
                  <% for(let i = 0 ; i< project.difficulty; ++i) { %>
                    <i class="fas fa-star"></i>
                  <% }; %>
                </div>
                <a href="/projects/<%=project._id%>" class="btn btn-primary">View</a>
              </div>
            </div>
        <% });%>
    
</div>

<% include ./partials/footer %>